{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "paths": {
      "@/*": ["../src/*"]
    },

    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types"
  },
  "exclude": ["**/tests"],
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
